<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_alignParentTop="true"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edit_mac"
        android:layout_below="@+id/text_name"
        android:ems="10"
        android:hint="Home PC" >

        <requestFocus />
        <requestFocus />

    </EditText>

    <Button
        android:id="@+id/btn_hint_name"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_name"
        android:layout_alignLeft="@+id/btn_hint_mac"
        android:layout_alignTop="@+id/edit_name"
        android:background="@drawable/ic_action_help" />

    <TextView
        android:id="@+id/text_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_name"
        android:text="MAC Address"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edit_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_mac"
        android:layout_toLeftOf="@+id/btn_hint_mac"
        android:ems="10"
        android:hint="AB:CD:EF:12:34:56" >
    </EditText>

    <Button
        android:id="@+id/btn_hint_mac"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_mac"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/edit_mac"
        android:background="@drawable/ic_action_help" />

    <TextView
        android:id="@+id/text_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_mac"
        android:text="Broadcast IP Address"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edit_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_ip"
        android:layout_toLeftOf="@+id/btn_hint_ip"
        android:ems="10"
        android:hint="192.168.1.255" />

    <Button
        android:id="@+id/btn_hint_ip"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_ip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/edit_ip"
        android:background="@drawable/ic_action_help" />

    <TextView
        android:id="@+id/text_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_ip"
        android:text="Port"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edit_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_port"
        android:layout_toLeftOf="@+id/btn_hint_port"
        android:ems="10"
        android:hint="9" />

    <Button
        android:id="@+id/btn_hint_port"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_port"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/edit_port"
        android:background="@drawable/ic_action_help" />

    <Switch
        android:id="@+id/switch_quiet_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edit_port"
        android:layout_below="@+id/edit_port"
        android:layout_marginTop="8dp"
        android:minHeight="40dp"
        android:text="Quiet Hours" />

    <Button
        android:id="@+id/btn_hint_quiet_hours"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/switch_quiet_hours"
        android:layout_alignLeft="@+id/btn_hint_port"
        android:layout_alignTop="@+id/switch_quiet_hours"
        android:background="@drawable/ic_action_help" />

</RelativeLayout>